# Various configurable paths (remember to edit Makefile.in, not Makefile)

CC =		@CC@
CCOPT =		@V_CCOPT@
DEFS =		@DEFS@
INCLS =		-I.
CFLAGS =	$(CCOPT) $(DEFS) $(INCLS)
LDFLAGS =	@LDFLAGS@
LIBS =		@LIBS@
NETLIBS =	@V_NETLIBS@
INSTALL =	@INSTALL@

@SET_MAKE@

.c.o:
	@rm -f $@
	$(CC) $(CFLAGS) -c $*.c

SRC =		thttpd.c libhttpd.c fdwatch.c mmc.c timers.c match.c tdate_parse.c hkp.c

OBJ =		$(SRC:.c=.o) @LIBOBJS@

ALL =		ludd

GENHDR =	mime_encodings.h mime_types.h

CLEANFILES =	$(ALL) $(OBJ) $(GENSRC) $(GENHDR)

SUBDIRS =	cgi-src pks

all:		this subdirs
this:		$(ALL)

ludd: $(OBJ)
	@rm -f $@
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(OBJ) $(LIBS) $(NETLIBS)

mime_encodings.h:	mime_encodings.txt
	rm -f mime_encodings.h
	sed < mime_encodings.txt > mime_encodings.h \
	  -e 's/#.*//' -e 's/[ 	]*$$//' -e '/^$$/d' \
	  -e 's/[ 	][ 	]*/", 0, "/' -e 's/^/{ "/' -e 's/$$/", 0 },/'

mime_types.h:	mime_types.txt
	rm -f mime_types.h
	sed < mime_types.txt > mime_types.h \
	  -e 's/#.*//' -e 's/[ 	]*$$//' -e '/^$$/d' \
	  -e 's/[ 	][ 	]*/", 0, "/' -e 's/^/{ "/' -e 's/$$/", 0 },/'


subdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) \
		BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
		HOMEDIR=$(HOMEDIR) WEBDIR=$(WEBDIR) CGIBINDIR=$(CGIBINDIR) \
	) ; done


install:	installthis install-man installsubdirs

installthis:
	-mkdir -p $(DESTDIR)$(BINDIR)
	$(INSTALL) -m 555 ludd $(DESTDIR)$(BINDIR)

install-man:
	-mkdir -p $(DESTDIR)$(MANDIR)/man8
	$(INSTALL) -m 444 -g man ludd.8 $(DESTDIR)$(MANDIR)/man8

installsubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) \
		BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
		HOMEDIR=$(HOMEDIR) WEBDIR=$(WEBDIR) CGIBINDIR=$(CGIBINDIR) \
		install \
	) ; done

uninstall:	uninstallthis uninstall-man uninstallsubdirs

uninstallthis:
	rm -f $(DESTDIR)$(BINDIR)/ludd

uninstall-man:
	rm -f $(DESTDIR)$(MANDIR)/man8/ludd.8

uninstallsubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) \
		BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
		HOMEDIR=$(HOMEDIR) WEBDIR=$(WEBDIR) CGIBINDIR=$(CGIBINDIR) \
		uninstall \
	) ; done

clean:		cleansubdirs
	rm -f $(CLEANFILES)

distclean:	distcleansubdirs
	rm -f $(CLEANFILES) Makefile 

cleansubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) clean \
	) ; done

distcleansubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) distclean \
	) ; done

thttpd.o:	config.h version.h libhttpd.h fdwatch.h mmc.h timers.h match.h
libhttpd.o:	config.h version.h libhttpd.h mime_encodings.h mime_types.h \
		mmc.h timers.h match.h tdate_parse.h hkp.h
fdwatch.o:	fdwatch.h
mmc.o:		mmc.h libhttpd.h
timers.o:	timers.h
match.o:	match.h
tdate_parse.o:	tdate_parse.h
hkp.o:		hkp.h libhttpd.h
