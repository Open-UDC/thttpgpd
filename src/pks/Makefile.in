CC =		@CC@
CCOPT =		@V_CCOPT@
DEFS =		@DEFS@
INCLS =		-I..
CFLAGS =	$(CCOPT) $(DEFS) $(INCLS)
LDFLAGS =	@LDFLAGS@
LIBS =		@LIBS@
NETLIBS =	@V_NETLIBS@
INSTALL =	@INSTALL@

CLEANFILES =	*.o cgi-lookup cgi-add

@SET_MAKE@

.c.o:
	@rm -f $@
	$(CC) $(CFLAGS) -c $*.c

all:		lookup add

lookup:	cgi-lookup.o
	$(CC) $(LDFLAGS) cgi-lookup.o $(LIBS) -o cgi-lookup

add:	cgi-add.o
	$(CC) $(LDFLAGS) cgi-add.o $(LIBS) -o cgi-add

install:	all
	-mkdir -p $(HOMEDIR)/$(WEBDIR)/pks
	$(INSTALL) cgi-lookup $(HOMEDIR)/$(WEBDIR)/pks/lookup
	$(INSTALL) cgi-add $(HOMEDIR)/$(WEBDIR)/pks/add
#	$(INSTALL) cgi-add.sh $(HOMEDIR)/$(WEBDIR)/pks/add

uninstall:
	rm -rf $(HOMEDIR)/$(WEBDIR)/pks
	
clean:
	rm -f $(CLEANFILES)

distclean:
	rm -f $(CLEANFILES) Makefile

