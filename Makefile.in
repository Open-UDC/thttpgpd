# Various configurable paths (remember to edit Makefile.in, not Makefile)

# Top level hierarchy.
prefix = @prefix@
exec_prefix = @exec_prefix@
# Pathname of directory to install the binary.
BINDIR = @sbindir@
# Pathname of directory to install the man page.
#MANDIR = @mandir@ # Weirdo autotool bugs here ...
MANDIR = @datarootdir@/man

HOMEDIR = @localstatedir@/.ludd
# Pathname of directory available trough internet.
WEBDIR = pub

# CONFIGURE: Directory for CGI executables.
CGIBINDIR =	$(HOMEDIR)/$(WEBDIR)/in

# You shouldn't need to edit anything below here.

CC =		@CC@
CCOPT =		@V_CCOPT@
DEFS =		@DEFS@
INCLS =		-I.
CFLAGS =	$(CCOPT) $(DEFS) $(INCLS)
LDFLAGS =	@LDFLAGS@
LIBS =		@LIBS@
NETLIBS =	@V_NETLIBS@
INSTALL =	@INSTALL@

@SET_MAKE@

SUBDIRS =	src

all:		subdirs
this:		all

subdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) \
		BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
		HOMEDIR=$(HOMEDIR) WEBDIR=$(WEBDIR) CGIBINDIR=$(CGIBINDIR) \
	) ; done


install:	installsubdirs
	useradd -r -c "system user for ludd" -d "$(HOMEDIR)" -s /sbin/nologin .ludd || true
	chown -R .ludd "$(HOMEDIR)"

installsubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) \
		BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
		HOMEDIR=$(HOMEDIR) WEBDIR=$(WEBDIR) CGIBINDIR=$(CGIBINDIR) \
		install \
	) ; done

uninstall:	uninstallsubdirs
	userdel .ludd
	rm -rf "$(HOMEDIR)"

uninstallsubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) \
		BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
		HOMEDIR=$(HOMEDIR) WEBDIR=$(WEBDIR) CGIBINDIR=$(CGIBINDIR) \
		uninstall \
	) ; done

clean:		cleansubdirs

distclean:	distcleansubdirs
	rm -f Makefile config.cache config.log config.status cscope.out
	rm -rf doxydocs/html

cleansubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) clean \
	) ; done

distcleansubdirs:
	for i in $(SUBDIRS) ; do ( \
	    cd $$i ; \
	    $(MAKE) $(MFLAGS) distclean \
	) ; done

cscope:
	cscope -bR

doc:
	doxygen doxydocs/Doxyfile

tar:
	@name=`sed -n -e '/SERVER_SOFTWARE/!d' -e 's,.*thttpd/,thttpd-,' -e 's, .*,,p' version.h` ; \
	  rm -rf $$name ; \
	  mkdir $$name ; \
	  tar cf - `cat FILES` | ( cd $$name ; tar xfBp - ) ; \
	  chmod 644 $$name/Makefile.in $$name/config.h $$name/mime_encodings.txt $$name/mime_types.txt ; \
	  chmod 755 $$name/cgi-bin $$name/cgi-src $$name/contrib $$name/contrib/redhat-rpm ; \
	  tar cf $$name.tar $$name ; \
	  rm -rf $$name ; \
	  gzip $$name.tar

